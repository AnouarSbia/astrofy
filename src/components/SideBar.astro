---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID } = Astro.props;
---

<div class="drawer-side z-40">
  <label for="my-drawer" class="drawer-overlay"></label>
  <aside
    class="px-2 pt-2 h-auto min-h-full w-[19rem] bg-base-200 text-base-content flex flex-col"
  >
    <div class="w-fit mx-auto mt-5 mb-4">
      <a href="/">
        <div class="w-44">
          <Image
            format="webp"
            width={400}
            height={200}
            src="/logo.png"
            alt="AnouarLab"
            class="object-contain w-full"
          />
        </div>
      </a>
    </div>
    <!-- Profile Photo -->
    <a
      href="/about"
      class="flex items-center gap-3 px-4 py-3 mb-2 rounded-lg hover:bg-base-300 transition-colors group"
      title="En savoir plus sur Anouar"
    >
      <div class="avatar">
        <div
          class="w-12 rounded-full ring-2 ring-primary ring-offset-base-100 ring-offset-1 group-hover:ring-accent transition-all"
        >
          <Image
            format="webp"
            width={100}
            height={100}
            src="/profile.webp"
            alt="Anouar Sbia"
            class="rounded-full"
          />
        </div>
      </div>
      <div>
        <p
          class="font-semibold text-sm text-primary underline lg:no-underline lg:text-base-content group-hover:text-primary group-hover:underline transition-colors"
        >
          Anouar Sbia
        </p>
        <p class="text-xs opacity-70">Consultant SEO & CRO</p>
      </div>
    </a>
    <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
    <SideBarFooter />
  </aside>
</div>

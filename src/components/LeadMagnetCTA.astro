---
interface Props {
    title: string;
    description: string;
    buttonText?: string;
    buttonUrl?: string;
    variant?: "inline" | "full";
}

const {
    title,
    description,
    buttonText = "Recevoir mon accès gratuit",
    buttonUrl = "#newsletter",
    variant = "inline",
} = Astro.props;
---

{
    variant === "inline" ? (
        <div class="bg-base-200 rounded-xl p-6 my-8 border border-base-300">
            <div class="flex flex-col md:flex-row md:items-center gap-4">
                <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6 text-primary"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <circle cx="12" cy="12" r="10" />
                            <circle cx="12" cy="12" r="6" />
                            <circle cx="12" cy="12" r="2" />
                        </svg>
                        <h3 class="text-lg font-bold m-0">{title}</h3>
                    </div>
                    <p class="text-base-content/70 m-0 text-sm">
                        {description}
                    </p>
                </div>
                <div class="flex-shrink-0">
                    <a href={buttonUrl} class="btn btn-primary">
                        {buttonText}
                    </a>
                </div>
            </div>
            <div class="flex gap-4 mt-3 text-xs text-base-content/60">
                <span class="flex items-center gap-1">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-3 h-3"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    Gratuit
                </span>
                <span class="flex items-center gap-1">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-3 h-3"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    Sans engagement
                </span>
                <span class="flex items-center gap-1">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-3 h-3"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    2 min
                </span>
            </div>
        </div>
    ) : (
        <div class="bg-gradient-to-br from-primary/10 to-secondary/10 rounded-2xl p-8 my-12 text-center border border-primary/20">
            <div class="flex justify-center mb-4">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-10 h-10 text-primary"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <circle cx="12" cy="12" r="10" />
                    <circle cx="12" cy="12" r="6" />
                    <circle cx="12" cy="12" r="2" />
                </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3">{title}</h3>
            <p class="text-base-content/70 mb-6 max-w-md mx-auto">
                {description}
            </p>
            <a href={buttonUrl} class="btn btn-primary btn-lg">
                {buttonText}
            </a>
            <div class="flex justify-center gap-6 mt-4 text-sm text-base-content/60">
                <span class="flex items-center gap-1">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-4 h-4"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    Gratuit
                </span>
                <span class="flex items-center gap-1">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-4 h-4"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    Sans spam
                </span>
                <span class="flex items-center gap-1">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-4 h-4"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    Désinscription facile
                </span>
            </div>
        </div>
    )
}
